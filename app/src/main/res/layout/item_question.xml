<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff6ea"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_question_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff6ea"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rg_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff6ea"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_answer_example_1"
            android:layout_width="wrap_content"
            android:background="#fff6ea"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_answer_example_2"
            android:layout_width="wrap_content"
            android:background="#fff6ea"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_answer_example_3"
            android:layout_width="wrap_content"
            android:background="#fff6ea"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_answer_example_4"
            android:layout_width="wrap_content"
            android:background="#fff6ea"
            android:layout_height="wrap_content" />
    </RadioGroup>

</LinearLayout>
