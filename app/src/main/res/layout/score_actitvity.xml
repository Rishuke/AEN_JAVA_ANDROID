<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6ea"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_score_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votre Score"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_score_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_score_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_certificate_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/tv_score_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="FÃ©licitations! Vous avez obtenu le certificat!" />

</RelativeLayout>
